<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/secondaryColor"
    tools:context=".TomaMuestraActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/imgImagen"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="15dp"
                android:contentDescription="@string/todo"
                android:scaleType="fitCenter"
                android:src="@drawable/imageblank" />

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:onClick="onclick"
                android:text="@string/subir_imagen" />

            <RadioGroup
                android:id="@+id/rg_quimicos"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_quimico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quimicos_a_usar" />

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_column="1"
                        app:layout_row="0" />

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_column="0"
                        app:layout_row="1" />

                    <RadioButton
                        android:id="@+id/rb_marckis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/marckis"
                        app:layout_column="0"
                        app:layout_row="2" />

                    <RadioButton
                        android:id="@+id/rb_mecke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mecke"
                        app:layout_column="1"
                        app:layout_row="2" />

                    <RadioButton
                        android:id="@+id/rb_mandelin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mandelin"
                        app:layout_column="2"
                        app:layout_row="2" />

                    <RadioButton
                        android:id="@+id/rb_simon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/simon_s_a_b"
                        app:layout_column="0"
                        app:layout_row="3" />

                    <RadioButton
                        android:id="@+id/rb_liebermann"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/liebermann"
                        app:layout_column="1"
                        app:layout_row="3" />

                    <RadioButton
                        android:id="@+id/rb_froehde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/froehde"
                        app:layout_column="2"
                        app:layout_row="3" />

                    <RadioButton
                        android:id="@+id/rb_folin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/folin_a_b"
                        app:layout_column="0"
                        app:layout_row="4" />

                </android.support.v7.widget.GridLayout>
            </RadioGroup>

            <TextView
                android:id="@+id/txtVibrant"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/txtDarkVibrant"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/txtLightVibrant"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/txtMuted"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/txtDarkMuted"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/txtLightMuted"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="4dp" />

            <Button
                android:id="@+id/btn_registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/registrar" />

            <Button
                android:id="@+id/btn_cancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancelar" />

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>